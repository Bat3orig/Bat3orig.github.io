---
import Layout from '../../layouts/Layout.astro';
import Bio from "../../components/bio.jsx";
import Education from "../../components/education.astro";
import WorkExperience from "../../components/work.astro";
// import Contact from '../../components/contact.astro';
import Profile from "../../components/profile.astro";
import {educations, profile, works, bio} from "../../lib/params.js";
---

<Layout>
	<div class="relative w-full max-w-3xl">
		<nav class="lg:absolute lg:top-5 lg:right-5 flex flex-row justify-end">
			<div class="flex flex-row items-center justify-between px-2">
				<a class="hover:bg-zinc-300 p-2 left" href="/">English</a>
				<div class="w-[1px] h-full bg-zinc-300"></div>
				<a class="hover:bg-zinc-300 bg-zinc-200 p-2 right" href="/mn">Монгол</a>
			</div>
		</nav>
	</div>
	<div class="font-mono max-w-3xl flex flex-col gap-5 lg:gap-10 py-2 px-3 lg:px-5 lg:py-5 mt-2 lg:mt-0">	
		<Profile profile={profile.mn}/>
		<Bio client:load text={bio.mn}/>
		<Education title="Боловсрол" educations={educations.mn}/>
		<WorkExperience title="Ажлын туршлага" works={works.mn}/>
		<!-- <Contact title="Холбоо барих"/> -->
	</div>
	
</Layout>

<style>
	.left {
		border-top-left-radius: 4px;
		border-bottom-left-radius: 4px;
		border-color: #d4d4d8;
		border-width: 1px;
		border-right: 0px;
	}
	.right {
		border-top-right-radius: 4px;
		border-bottom-right-radius: 4px;
		border-color: #d4d4d8;
		border-width: 1px;
		border-left: 0px;
		
	}
</style>