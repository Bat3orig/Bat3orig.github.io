---
// import { educations } from "../lib/params";
const {educations, title} = Astro.props;
---

<div class="flex flex-col gap-2">
  <p class="text-lg" data-aos="slide-right" data-aos-duration="500">{title}</p>
  {educations.map((education) => ( 
    <div class="border rounded-lg p-2 md:p-3 lg:p-4 xl:pg-5 text-sm text-zinc-600" data-aos="fade" data-aos-duration="1200">
      <p class="font-semibold">{education.school}</p>
      
      <ul class="list-disc mt-2 pl-5">
        <li>{education.year}</>
        <li>{education.occupation}</li>
        <li>{education.level}</li>
        <li>GPA: {education.degree}</li>
      </ul>
    </div>
  ))}
</div>
