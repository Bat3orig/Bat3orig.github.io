---
import { works } from "../lib/params";
---

<div class="flex flex-col gap-2">
  <p class="text-lg" data-aos="slide-right" >Work Experience</p>
  <div class="flex flex-col gap-2" data-aos="fade" data-aos-duration="1000">
  {works.map((work, index) => (
    <div
      class="border rounded-lg p-2 lg:p-4 text-sm text-zinc-600"
    >
      <div class="w-full flex flex-row justify-between text-zinc-700">
        <p class="font-medium">{work.company}</p>
        <p>{work.year}</p>
      </div>
      <p>{work.occupation}</p>

      <ul class="mt-2 lg:mt-5 ml-2 space-y-2 list-disc list-inside">
        {work.details.map((detail, index) => (
          <li>
            <div class="w-full flex flex-row justify-between list-disc">
              <p>{detail.name}</p>
              {detail?.link && (
                <a
                  href={detail.link.href}
                  target="_blank"
                  class="hover:text-black hover:underline"
                >
                  {detail.link.text}
                </a>
              )}
            </div>
          </li>
        ))}
      </ul>
    </div>
  ))}
  </div>
</div>
